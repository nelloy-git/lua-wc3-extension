{
    "name": "lua-wc3",
	"publisher": "nelloy",
	"repository": "https://github.com/nelloy-git/lua-wc3",
	"displayName": "lua-wc3",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:lua-wc3.Build"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
			"command": "lua-wc3.Build",
			"title": "Warcraft 3: Build map"
        }],
        "configuration":[
            {
                "title": "lua-wc3",
                "properties": {
                    "lua-wc3.destinationFolder":{
                        "type": "string",
                        "default": "dst",
                        "description": "Relative path to destination folder in workspace."
                    },
                    "lua-wc3.sourceFolder":{
                        "type": "string",
                        "default": "src",
                        "description": "Relative path to source folder in workspace."
                    },
                    "lua-wc3.exePath":{
                        "type": "string",
                        "default": "lua-wc3",
                        "description": "Window: path to lua-wc3.exe.\nLinux: path to lua-wc3.py"
                    }
                }
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"bin": {
		"exe": "file:C:\\Users\\Nello\\OneDrive\\Documents\\lua-wc3\\src\\script\\lua-wc3.exe"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
